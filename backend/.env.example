# ===========================================
# BACKEND ENVIRONMENT VARIABLES
# ===========================================

# Server Configuration
NODE_ENV=development
PORT=5000
BACKEND_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# Database Configuration (Neon PostgreSQL)
DATABASE_URL=postgresql://username:password@host/database?sslmode=require

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-different-from-jwt
JWT_REFRESH_EXPIRE=30d

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# AI Provider API Keys
CLAUDE_API_KEY=sk-ant-api03-your-claude-key-here
GEMINI_API_KEY=your-gemini-api-key-here
GROQ_API_KEY=gsk_your-groq-api-key-here
COHERE_API_KEY=your-cohere-api-key-here

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
ENABLE_REDIS=false

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
EMAIL_FROM=noreply@yourdomain.com

# Sentry Configuration (Optional)
SENTRY_DSN=your-sentry-dsn-here
ENABLE_SENTRY=false

# WhatsApp Configuration
WHATSAPP_SESSION_PATH=./.wwebjs_auth
WHATSAPP_MAX_RETRY=3
WHATSAPP_TIMEOUT=60000

# Rate Limiting (Anti-ban Protection)
MAX_MESSAGES_PER_MINUTE=20
MAX_MESSAGES_PER_HOUR=100
MAX_MESSAGES_PER_DAY=500
MESSAGE_DELAY_MIN=2000
MESSAGE_DELAY_MAX=5000

# API Rate Limiting
API_RATE_LIMIT_WINDOW=15
API_RATE_LIMIT_MAX_REQUESTS=100

# Keep-Alive Configuration (for Render)
ENABLE_KEEP_ALIVE=true
KEEP_ALIVE_INTERVAL=600000
KEEP_ALIVE_URL=

# Logging
LOG_LEVEL=info
LOG_FILE_ERROR=logs/error.log
LOG_FILE_COMBINED=logs/combined.log

# Security
ENCRYPTION_KEY=your-32-character-encryption-key-here
BCRYPT_ROUNDS=10

# Business Hours (Optional)
BUSINESS_HOURS_ENABLED=false
BUSINESS_HOURS_START=09:00
BUSINESS_HOURS_END=18:00
BUSINESS_TIMEZONE=Asia/Karachi

# Admin Default Credentials (Change after first login!)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123
ADMIN_NAME=Admin User
